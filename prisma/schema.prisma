generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  accessCode String    @unique
  password   String // bcrypt hashed
  email      String    @unique
  company    String
  name       String?
  location   String
  latitude   Float
  longitude  Float
  isActive   Boolean   @default(true)
  isAdmin    Boolean   @default(false)
  lastLogin  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

enum FileType {
  FOLDER
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  ARCHIVE
  CODE
  TEXT
  OTHER
}

model FileSystemItem {
  id         String   @id @default(cuid())
  name       String
  type       FileType
  path       String   @unique
  parentPath String?
  size       Int? // null für Ordner
  extension  String?

  // Timestamps
  dateCreated  DateTime @default(now())
  dateModified DateTime @updatedAt

  // Relationships
  parent   FileSystemItem?  @relation("ParentChild", fields: [parentPath], references: [path])
  children FileSystemItem[] @relation("ParentChild")

  // Indices für bessere Performance
  @@index([parentPath])
  @@index([type])
  @@index([path])
  @@map("filesystem_items")
}
