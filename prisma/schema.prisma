generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  accessCode String    @unique
  password   String // bcrypt hashed
  email      String    @unique
  company    String
  name       String?
  location   String
  latitude   Float
  longitude  Float
  isActive   Boolean   @default(true)
  isAdmin    Boolean   @default(false)
  lastLogin  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relationships
  uploadedFiles FileSystemItem[]
  userFiles     FileSystemItem[] @relation("UserFiles")
  activityLogs  ActivityLog[]
  readActivities ActivityLog[] @relation("ActivityReader")
  loginAttempts LoginAttempt[]
}

enum FileType {
  FOLDER
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  ARCHIVE
  CODE
  TEXT
  OTHER
}

model FileSystemItem {
  id         String   @id @default(cuid())
  name       String
  type       FileType
  path       String   @unique
  parentPath String?
  size       Int? // null f√ºr Ordner
  extension  String?

  filePath      String?
  isReal        Boolean @default(false)
  uploadedBy    String
  userId        String? // nullable for user-specific files
  downloadCount Int     @default(0)

  // Timestamps
  dateCreated  DateTime @default(now())
  dateModified DateTime @updatedAt

  // Relationships
  parent   FileSystemItem?  @relation("ParentChild", fields: [parentPath], references: [path], onDelete: Cascade)
  children FileSystemItem[] @relation("ParentChild")
  uploader User?            @relation(fields: [uploadedBy], references: [id])
  user     User?            @relation("UserFiles", fields: [userId], references: [id])

  // Indices
  @@index([parentPath])
  @@index([type])
  @@index([path])
  @@index([uploadedBy])
  @@index([userId])
  @@map("filesystem_items")
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  action    String // 'login', 'logout', 'page_view'
  resource  String?
  success   Boolean  @default(true)
  isRead    Boolean  @default(false)
  readBy    String?
  readAt    DateTime?
  createdAt DateTime @default(now())

  // Relations
  user   User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reader User? @relation("ActivityReader", fields: [readBy], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([isRead])
  @@map("activity_logs")
}

model LoginAttempt {
  id         String   @id @default(cuid())
  accessCode String
  userId     String?
  success    Boolean
  createdAt  DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("login_attempts")
}
